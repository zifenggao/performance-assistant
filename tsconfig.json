{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/types",
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
  },
  "include": [
    "./**/*"
  ],
}